<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3e2613 </item>
        <item name="colorPrimaryDark">#26170c</item>
        <item name="colorAccent">#8f5221</item>
    </style>
    <style name="headingStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8f5221</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailsStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">#8f5221</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>



</resources>
